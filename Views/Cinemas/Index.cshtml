@using eTickets.Models;

@*Define Model*@
@model IEnumerable<Cinema>
@*Define ViewData*@
@{
    ViewData["Title"] = "List of Cinemas";
}

@*Code*@
<div class="row">
    <div class="col-md-8 col-lg-offset-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(Model => Model.Logo)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Name)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayNameFor(ModelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayNameFor(ModelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"> </i>Edit</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"> </i>Details</a> |
                            <a class="btn btn-danger"><i class="bi bi-trash"> </i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>




